{
    "extends": "@tsconfig/node18-strictest/tsconfig.json",
    "compilerOptions": {
      "target": "ES2015",
      "declaration": true,
      "rootDir": "src",
      "outDir": "dist",
      "noUncheckedIndexedAccess": false,
      "sourceMap": true,
      "ignoreDeprecations": "5.0",
      "importsNotUsedAsValues": "preserve",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
    },
    "exclude": [
      "node_modules",
    ],
    "include": [
      "src/**/*.ts"
    ]
  }
  